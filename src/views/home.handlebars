{{! plantilla con products actuales para el home  '/'}}

<div class="navbar">
  <a href="/api/sessions/logOut">Cerrar sesion</a>
  <a href="/profile">Mi perfil</a>
</div>

<div class="user-info">
  {{#if session.admin}}
    <h1>Rol: Administrador</h1>
  {{else}}
    <h1>Rol: Usuario</h1>
  {{/if}}
  <h1>Bienvenido, {{session.firstName}} {{session.lastName}}</h1>
</div>

<div class="container d-flex justify-content-center mt-4">
  <div class="row">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">ID: {{this._id}}</p>
            <p class="card-text">Descripci√≥n: {{this.description}}</p>
            <p class="card-text">Precio: {{this.price}}</p>
            <p class="card-text">Stock: {{this.stock}}</p>
            <p class="card-text">Categoria: {{this.category}}</p>
            <p class="card-text">Status: {{this.status}}</p>
            <p class="card-text">Codigo: {{this.code}}</p>
            <a href="#" class="btn btn-primary">Agregar al carrito</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>